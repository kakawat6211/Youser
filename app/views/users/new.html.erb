<h1>Users#new</h1>


<%= form_for(@user, url:{controller:'users', action:'create'}) do |f| %>
  <table>
  <tr>
    <th>名前</th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th>年齢</th>
    <td><%= f.text_field :age %></td>
  </tr>
  <tr>
    <th>身長</th>
    <td><%= f.text_field :height %></td>
  </tr>
  <tr>
    <th>キャラ</th>
    <td><%= f.text_field :chara %></td>
  </tr>
  <tr>
    <th>生年月日</th>
    <td>
      <%= f.date_select :birth_date, start_year: 1940, end_year: Time.current.year, use_month_numbers: true %>
    </td>
  </tr>
  <tr>
    <th></th>
    <td><%= f.submit '送信' %></td>
  </tr>
  </table>
<% end %>
